<Window x:Class="ControlWindowWPF.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlWindowWPF"
        mc:Ignorable="d"
        Title="キャリブレーション" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBlock Text="" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="Red" FontSize="36" FontWeight="Bold" Width="150" TextAlignment="Center" Margin="0,0,40,20" Name="StatusTextBlock"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="ボタンを押すかコントローラーのトリガーを引いてから5秒後にキャリブレーションされます" HorizontalAlignment="Center" FontSize="16"/>
            <TextBlock Text="正面を向いて画面に表示されているモデルと同じポーズをとってください" HorizontalAlignment="Center" FontSize="16"/>
            <Button Content="キャリブレーション" Name="CalibrationButton" Click="CalibrationButton_Click" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="20,5,20,5" FontSize="16" ToolTip="キャリブレーションを開始します"/>
        </StackPanel>
    </Grid>
</Window>
